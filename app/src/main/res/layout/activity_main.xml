<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/home_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/rubik_medium"
        android:text="@string/welcome"
        android:textColor="@color/swagblue"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/subtext_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_main" />

    <EditText
        android:id="@+id/EmailAddress_main"
        android:layout_width="307dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:autofillHints=""
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/rubik_medium"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAlignment="viewStart"
        android:textColor="#80000000"
        android:textColorHint="#80000000"
        app:layout_constraintBottom_toTopOf="@+id/Password_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtext_text"
        />

    <EditText
        android:id="@+id/Password_main"
        android:layout_width="306dp"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/rubik_medium"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAlignment="viewStart"
        android:textColor="#80000000"
        android:textColorHint="#80000000"
        app:layout_constraintBottom_toTopOf="@+id/login_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailAddress_main"
         />

    <Button
        android:id="@+id/login_main"
        android:layout_width="306dp"
        android:layout_height="60dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/swagblue"
        android:fontFamily="@font/rubik_medium"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@+id/subtext2_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password_main" />

    <Button
        android:id="@+id/Register_main"
        android:layout_width="306dp"
        android:layout_height="60dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/swagblue"
        android:fontFamily="@font/rubik_medium"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtext2_main" />

    <TextView
        android:id="@+id/subtext2_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="260dp"
        android:text="First time here?"
        android:textColor="#80000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/Register_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_main" />

    <ImageView
        android:id="@+id/logo_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        app:layout_constraintBottom_toTopOf="@+id/home_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/subtext_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/rubik_light"
        android:text="@string/login_for_your_car_health"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/EmailAddress_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_home" />

</androidx.constraintlayout.widget.ConstraintLayout>